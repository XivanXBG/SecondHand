<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Second Hand Electronics</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <div>
      <div class="errorContainer">
        {{#each errMsgs}}
          <p>{{this}}</p>
        {{/each}}
      </div>
    </div>

    <div id="container">

      <nav>
        <ul>
          <!--For all users-->
          <li><a href="/">Home</a></li>
          <li><a href="/catalog">Catalog</a></li>
          {{#if isAuth}}
            <li><a href="/offers/create">Create Offer</a></li>
            <li><a href="/search">Search</a></li>
            <li><a href="/user/logout">Logout</a></li>
          {{else}}
            <li><a href="/user/login">Login</a></li>
            <li><a href="/user/register">Register</a></li>
          {{/if}}

          <!--For guest user-->

        </ul>

      </nav>

      {{{body}}}
      <footer>@SoftUni - JS Back-End - Second Hand Electronics 2023</footer>
    </div>

  </body>

</html>